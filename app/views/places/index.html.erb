<%if @current_user != nil%>

  <h1 style="font-size: 24px;">Places</h1>

  <ul>
    <% for place in @places %>
      <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
    <% end %>
  </ul>

  <p>
    <a href="/places/new" class="btn btn-outline-primary" style="color: black;">New place</a>
  </p>

   <% else %>
   
    <p>You need to be logged in to see the content</p>
  
  <%end%>