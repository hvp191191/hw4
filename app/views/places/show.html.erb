 <%if @current_user != nil%>

  <h1><%= @place["name"] %></h1>


  <h2>My Entries</h2>
  <div class ="row">
  <% for entry in @entries %>
  <div class =" col-sm-6 col-md-3">
    <h3><%= entry["title"] %></h3>
    <h4><%= entry["occurred_on"] %></h4>
    <p><%= entry["description"] %></p>

    <% if entry.uploaded_image.attached? %>
      <img src ="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
    <% else %>
      <img src="<%= entry["image"] %>" class="img-fluid">
    <% end %>
  </div>
  <% end %>

  <p>
    <a href="/entries/new?place_id=<%= @place["id"] %>" class = "btn btn-success">New Entry</a>
  </p>

  <p>
    <a href="/places" class = "btn btn-success">Back to All Places</a>
  </p>

   <% else %>
     <p>You need to be logged in to see the content</p>

  <% end %>