<%if @current_user != nil%>

<h1 style="font-size: 24px;">New Entry</h1>

<form action="/entries" method="post" enctype="multipart/form-data">
  <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

  <div class ="mb-3">
    <label for="title_input" class="control-label">Title</label>
    <input type="text" name="title" id="title_input" class="form-control">
  </div>

  <div class ="mb-3">
    <label for="description_input" class="control-label">Description</label>
    <input type="text" name="description" id="description_input" class="form-control">
  </div>

  <div class ="mb-3">
    <label for="occurred_on_input" class ="control-label">Occurred On</label>
    <input type="date" name="occurred_on" id="occurred_on_input" class ="form-control">
  </div>

  <div class="mb-3">
    <label for= "uploaded_image" class = "form-label">Upload Image</label>
    <input type ="file" name= "uploaded_image" accept="image/png, image/jpeg, image/jpg, image/gif" id = "uploaded_image" class = "form-control" >
  </div>
  
  <button class="btn btn-outline-primary" style="color: black;">Save</button>
</form>
<% else %>
   
    <p>You need to be logged in to see the content</p>
  
  <%end%>
  